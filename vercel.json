{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "config/**",
          "database/**",
          "src/**",
          ".cache/**",
          "build/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/admin",
      "dest": "/"
    },
    {
      "src": "/api/(.*)",
      "dest": "/"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
